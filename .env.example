# Database Configuration
DB_HOST=wkf-postgres
DB_PORT=5432
DB_NAME=finance_news
DB_USER=wkf_user
DB_PASSWORD=change_this_secure_password

# PostgreSQL Initial Setup (used by docker-compose)
POSTGRES_DB=finance_news
POSTGRES_USER=wkf_user
POSTGRES_PASSWORD=change_this_secure_password

# Scraping Configuration
TARGET_URL=https://finance.naver.com/news/news_list.naver
SCRAPING_INTERVAL_SECONDS=60

# Anti-Detection Configuration
MIN_DELAY_SECONDS=0.5
MAX_DELAY_SECONDS=2.0
MIN_REQUEST_INTERVAL=1.0

# Proxy Configuration (optional - set PROXY_ENABLED=true to enable)
PROXY_ENABLED=false
PROXY_HTTP=
PROXY_HTTPS=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

# HTTP Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ===================================================================
# Multi-LLM Analyzer Configuration (3개 analyzer 서비스)
# ===================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Google Gemini API
GEMINI_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# OpenAI API
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Analysis Configuration (공통)
ANALYSIS_THRESHOLD_PERCENT=70
MAX_RECOMMENDATIONS_PER_ARTICLE=3

# Korea Investment & Securities (KIS) API
KIS_APP_KEY=your_kis_app_key_here
KIS_APP_SECRET=your_kis_app_secret_here
KIS_ACCOUNT_NUMBER=12345678-01
KIS_BASE_URL=https://openapi.koreainvestment.com:9443
KIS_IS_REAL_ACCOUNT=false

# Market Configuration
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=0
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=30
STOCK_HISTORY_DAYS=5

# API Retry Configuration
MAX_API_RETRIES=3
RETRY_BACKOFF_FACTOR=2

# Trading Configuration (자동 매매)
PROFIT_TARGET_PERCENT=2  # 목표 수익률 (%)
STOP_LOSS_PERCENT=1      # 손절 수익률 (%)
TRADE_MONITORING_INTERVAL_SECONDS=60  # 매매 모니터링 주기 (초)
TRADE_AMOUNT_PER_STOCK=1000000  # 종목당 매수 금액 (원)


# ===================================================================
# OpenDART API Configuration (공시 정보)
# ===================================================================

# OpenDART API Key (https://opendart.fss.or.kr/ 에서 발급)
OPENDART_API_KEY=your_opendart_api_key_here
OPENDART_BASE_URL=https://opendart.fss.or.kr

# Disclosure Scraping Configuration
DISCLOSURE_SCRAPING_INTERVAL_SECONDS=300  # 5분마다 스크래핑
DISCLOSURE_CORP_CLS=  # 법인구분 (Y: 유가증권, K: 코스닥, N: 코넥스, E: 기타, 빈 값: 전체)
DISCLOSURE_PAGE_COUNT=100  # 페이지당 조회 건수 (최대 100)
